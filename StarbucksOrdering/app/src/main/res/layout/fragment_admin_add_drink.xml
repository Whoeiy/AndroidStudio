<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_exit"
        android:id="@+id/admin_add_drink_exit_btn"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_launcher_background"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:id="@+id/admin_add_drink_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/admin_add_drink_img"
        android:id="@+id/admin_add_drink_info" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#eee" />

        <!-- Name -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/admin_add_drink_name" />

        <!-- Price -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Price"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/admin_add_drink_price" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#eee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

            <!-- Type -->

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Type"
                android:gravity="center"
                android:id="@+id/admin_add_drink_type"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/admin_add_drink_type_spinner"
                android:layout_toRightOf="@id/admin_add_drink_type"
                android:paddingLeft="20dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#eee" />

        <!-- Detail -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Detail"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/admin_add_drink_detail" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#eee" />

        <!-- Add -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Add"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:clickable="true"
            android:id="@+id/admin_add_drink_btn" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        android:layout_below="@id/admin_add_drink_info"/>

</RelativeLayout>